{
    "extends": "expo/tsconfig.base",
    "compilerOptions": {
        "strict": true,
        "baseUrl": ".",
        "paths": {
            "@components/*": ["components/*"],
            "@screens/*": ["screens/*"],
            "@context/*": ["context/*"],
            "@config/*": ["config/*"],
            "@hooks/*": ["hooks/*"],
